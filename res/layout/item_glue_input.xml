<?xml version="1.0" encoding="utf-8"?>
<!-- 输入IO方案里面显示的布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/item_glue_marginLeft"
        android:layout_marginTop="@dimen/item_glue_marginTop"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="1"
        android:textSize="@dimen/item_glue_textsize" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/item_glue_marginLeft"
        android:layout_marginTop="@dimen/item_glue_marginTop"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="@string/activity_glue_goTimePrev"
        android:textSize="@dimen/item_glue_textsize" />

    <TextView
        android:id="@+id/item_goTimePrev"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/item_glue_marginTop"
        android:layout_weight="1"
        android:gravity="right"
        android:text="500"
        android:textSize="@dimen/item_glue_textsize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/item_glue_marginTop"
        android:text="@string/activity_ms"
        android:textSize="@dimen/item_glue_textsize" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/item_glue_marginLeft"
        android:layout_marginTop="@dimen/item_glue_marginTop"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="@string/activity_glue_goTimeNext"
        android:textSize="@dimen/item_glue_textsize" />

    <TextView
        android:id="@+id/item_goTimeNext"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/item_glue_marginTop"
        android:layout_weight="1"
        android:gravity="right"
        android:text="1000"
        android:textSize="@dimen/item_glue_textsize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/item_glue_marginTop"
        android:text="@string/activity_ms"
        android:textSize="@dimen/item_glue_textsize" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </LinearLayout>

</LinearLayout>